// Source https://css-tricks.com/styling-cross-browser-compatible-range-inputs-css/

.slider

  //###############
  // Variables
  //###############

  // Thumb
  $thumb-background = #ffffff
  $thumb-border = 1px solid #000000
  $thumb-border-radius = 3px
  $thumb-box-shadow = 1px 1px 1px #000000, 0 0 1px #0d0d0d
  $thumb-cursor = pointer
  $thumb-height = 36px
  $thumb-width = 16px

  // Track
  $track-background = #3071a9
  $track-background-focus = #367ebd
  $track-background-ms-lower = #2a6495
  $track-border = 0.2px solid #010101
  $track-border-radius = 1.3px
  $track-box-shadow = 1px 1px 1px #000000, 0px 0px 1px #0d0d0d
  $track-cursor = pointer
  $track-height = 8.4px
  $track-width = 100%

  // ==================

  //###############
  // Mixins
  //###############

  thumb()
    background $thumb-background
    border $thumb-border
    border-radius $thumb-border-radius
    box-shadow $thumb-box-shadow
    cursor $thumb-cursor
    height $thumb-height
    width $thumb-width

  track()
    background $track-background
    border $track-border
    border-radius $track-border-radius
    box-shadow $track-box-shadow
    cursor $track-cursor
    height $track-height
    width $track-width

  //###############
  // Common styles
  //###############

  -webkit-appearance: none
  -moz-appearance: none
  appearance: none
  background transparent
  width 100%

  &:focus
    outline none

  //###############
  // Thumb styles
  //###############

  // Webkit
  &::-webkit-slider-thumb
    -webkit-appearance: none
    margin-top -14px
    thumb()

  // Mozilla
  &::-moz-range-thumb
    thumb()

  // IE
  &::-ms-thumb
    thumb()

  //###############
  // Track styles
  //###############

  // Webkit
  &::-webkit-slider-runnable-track
    track()

  &:focus::-webkit-slider-runnable-track
    background $track-background-focus

  // Mozilla
  &::-moz-range-track
    track()

  &:focus::-moz-range-track
    background $track-background-focus

  // IE

  &::-ms-track
    background transparent
    border-color transparent
    border-width 16px 0
    color transparent
    cursor pointer
    height $track-height
    width $track-width

  &::-ms-fill-lower
    background $track-background-ms-lower // TODO: check colors for IE
    border $track-border
    border-radius $track-border-radius
    box-shadow $track-box-shadow

  &::-ms-fill-upper
    background $track-background // TODO: check colors for IE
    border $track-border
    border-radius $track-border-radius
    box-shadow $track-box-shadow

  &:focus::-ms-fill-lower
    background $track-background // TODO: check colors for IE

  &:focus::-ms-fill-upper
    background $track-background-focus // TODO: check colors for IE
