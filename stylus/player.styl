@import "slider.styl"

#nirvana-player
  $player_width = 500
  $playlist_padding = 5
  $player_border = 1

  border ($player_border)px solid black
  width ($player_width + 2 * $playlist_padding)px

  .player-controls
    width   ($player_width + 2 * $playlist_padding)px

    audio
      width 100%
      display block

    .current-track-title
      font-weight bold
      padding-left 10px

  .player-playlist
    padding ($playlist_padding)px
    display inline-block
    width   ($player_width)px

    .player-playlist-track-list
      cursor default
      &:before
        content "+"
      > .player-playlist-track
        display none
      > .player-playlist-track-list
        display none

      &.opened
        &:before
          content "-"
        > .player-playlist-track
          display block
        > .player-playlist-track-list
          display block

    .track-list-name, .track-title
      cursor pointer

    .player-playlist-track:last-child
      border-bottom 1px solid darkgray
      margin-bottom 5px
